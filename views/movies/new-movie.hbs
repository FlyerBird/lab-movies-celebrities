<h2>Create a new movie</h2>

<form method="POST" action="/movies/create">

  <label>Title</label>
  <input type="text" name="title" />

  <label>Genre</label>
  <input type="text" name="genre" />

  <label>Plot</label>
  <input type="text" name="plot" />

  <label for="cast">Choose a cast member</label>
    <select name="cast" id="" multiple>
        {{#each celebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}

    </select>

  <button type="submit">Create the new movie</button>

</form>